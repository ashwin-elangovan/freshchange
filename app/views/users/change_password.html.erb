<%= render 'shared/nav' %>

<div class = "container">
  <% flash.each do |key, value| %>
    <div class="alert alert-<%= key %>"><%= value %></div>
  <% end %>
  <% yield %>
  <% debug(params) if Rails.env.development? %>

  <h1> Change password </h1>
  <br>
  <%= form_tag "/users/change_password", method: :put do %>
    	<%= password_field 'old', params[:old], placeholder: "Enter the old password here", autocomplete: :off, class: "form-control" %>
    	<br>
    	<br>
    	<%= password_field 'new', params[:new], placeholder: "Enter the new password here", autocomplete: :off, class: "form-control" %>
    	<br>
    	<br>
    	<%= password_field 'new_confirm', params[:new_confirm], placeholder: "Confirm the new password", autocomplete: :off, class: "form-control" %>
    	<br>
    	<br>
    	<%= hidden_field_tag 'user_id', current_user.id %>
    	<%= submit_tag 'Change password', class: "btn btn-primary" %>
  <% end %>


<script type="text/javascript">
$(document).ready(function(){
  setTimeout(function(){
    $('.alert').remove();
  }, 3000);
 })
</script>

</div>